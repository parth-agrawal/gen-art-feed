generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Art {
  // id
  id String @id @default(uuid())

  // art params 

  // created at
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // is published
  isPublished Boolean @default(false)
  //is deleted
  isDeleted   Boolean @default(false)
}
